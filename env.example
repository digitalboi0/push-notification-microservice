# .env

# Django Settings
# Use a strong, unique secret key for production. Generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your_django_secret_key_here_change_this_immediately

# Set DEBUG to False for production environments. True is acceptable for development.
DEBUG=True

# List of host/domain names that this Django site can serve.
# Separate multiple hosts with commas. Use '*' cautiously in development only.
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,your-app.onrender.com

# Database Configuration (PostgreSQL example - adjust for your setup)
DB_NAME=push_notifications
DB_USER=your_postgres_username
DB_PASSWORD=your_postgres_password
DB_HOST=localhost # Or the hostname of your PostgreSQL server
DB_PORT=5432      # Default PostgreSQL port

# Redis Configuration (for Celery Broker and Result Backend)
# Format: redis://[:password@]host:port/db_number
# If Redis is on localhost with default settings and no password:
REDIS_URL=redis://localhost:6379/0
# If Redis requires a password:
# REDIS_URL=redis://:your_redis_password@localhost:6379/0
# For a cloud Redis instance:
# REDIS_URL=redis://username:password@your-redis-host.com:port/db_number

# CORS Settings (if your frontend is on a different domain/port)
# Comma-separated list of origins allowed to make requests to your API
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Email Configuration (Optional, if using email features)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.your-email-provider.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@address.com
# EMAIL_HOST_PASSWORD=your_email_password


# --- Push Notification Service Specific Settings ---

# FCM Settings (Firebase Cloud Messaging - for Android)
# Obtain this from your Firebase Console project settings
FCM_SERVER_KEY=your_fcm_server_key_here

# APNs Settings (Apple Push Notification Service - for iOS)
# Path to your APNs certificate file (.pem format) on the server
APNS_CERT_PATH=/path/to/your/apns_certificate.pem
# Your app's bundle ID (e.g., com.yourcompany.yourapp)
APNS_TOPIC=your_app_bundle_id

# Web Push VAPID Keys (for Web Push Notifications)
# These keys must be generated using a VAPID key generator tool.
# The Private Key should be kept secret and used by your server.
WEB_VAPID_PRIVATE_KEY=your_web_vapid_private_key_here
# The Public Key is shared with the client (browser) during subscription.
WEB_VAPID_PUBLIC_KEY=your_web_vapid_public_key_here
